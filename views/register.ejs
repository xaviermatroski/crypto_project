<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - CDMS</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <i class="fas fa-shield-alt"></i>
            <span>CDMS</span>
        </div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/login">Login</a>
        </div>
    </nav>

    <div class="register-container">
        <div class="register-box">
            <h2>Join CDMS Network</h2>
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            <form action="/register" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="profilePicture">Profile Picture</label>
                    <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="userName">Username</label>
                    <input type="text" id="userName" name="userName" required minlength="3" maxlength="30">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required minlength="6">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" name="phone" required pattern="[0-9]{10}">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <select name="role" id="role" required onchange="handleRoleChange()">
                        <option value="">Select Role</option>
                        <option value="investigator">Investigator</option>
                        <option value="forensics_officer">Forensics Officer</option>
                        <option value="judiciary">Judiciary</option>
                    </select>
                </div>

                <!-- Add jurisdiction level field for judiciary -->
                <div class="form-group" id="jurisdictionLevelGroup" style="display: none;">
                    <label for="jurisdictionLevel">Jurisdiction Level</label>
                    <select name="jurisdictionLevel" id="jurisdictionLevel">
                        <option value="">Select Level</option>
                        <option value="district">District Court</option>
                        <option value="state">State High Court</option>
                        <option value="national">Supreme Court</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="street">Street</label>
                    <input type="text" id="street" name="address[street]" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" id="city" name="address[city]" required>
                    </div>
                    <div class="form-group">
                        <label for="state">State</label>
                        <input type="text" id="state" name="address[state]" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="zipCode">ZIP Code</label>
                    <input type="text" id="zipCode" name="address[zipCode]" required>
                </div>
                <button type="submit" class="register-button">Register</button>
            </form>
        </div>
    </div>

    <script>
    function handleRoleChange() {
        const role = document.getElementById('role').value;
        const jurisdictionLevelGroup = document.getElementById('jurisdictionLevelGroup');
        
        if (role === 'judiciary') {
            jurisdictionLevelGroup.style.display = 'block';
            document.getElementById('jurisdictionLevel').required = true;
        } else {
            jurisdictionLevelGroup.style.display = 'none';
            document.getElementById('jurisdictionLevel').required = false;
        }
    }
    </script>
</body>
</html>
