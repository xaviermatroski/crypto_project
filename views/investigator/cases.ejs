<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cases - CDMS</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <i class="fas fa-shield-alt"></i>
            <span>CDMS Investigator</span>
        </div>
        <div class="nav-links">
            <a href="/investigator/dashboard">Dashboard</a>
            <a href="/investigator/cases" class="active">My Cases</a>
            <a href="/investigator/search">Search Records</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </nav>

    <div class="cases-container">
        <div class="cases-header">
            <h1>My Cases</h1>
            <button class="create-case-btn" onclick="location.href='/investigator/cases/new'">
                <i class="fas fa-plus"></i> Create New Case
            </button>
        </div>

        <div class="cases-controls">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="Search cases by title or description...">
            </div>
            <select class="filter-select" id="priorityFilter">
                <option value="">All Priorities</option>
                <option value="high">High Priority</option>
                <option value="medium">Medium Priority</option>
                <option value="low">Low Priority</option>
            </select>
            <select class="filter-select" id="statusFilter">
                <option value="">All Status</option>
                <option value="open">Open</option>
                <option value="under_investigation">Under Investigation</option>
                <option value="pending_review">Pending Review</option>
                <option value="closed">Closed</option>
            </select>
        </div>

        <div class="cases-list" id="casesList">
            <% if (cases && cases.length > 0) { %>
                <% cases.forEach((case_, index) => { %>
                    <div class="case-item">
                        <div class="case-number-badge">
                            <%= index + 1 %>
                        </div>
                        <div class="case-content">
                            <div class="case-header">
                                <h3><%= case_.title %></h3>
                                <span class="case-priority <%= case_.priority %>"><%= case_.priority %></span>
                            </div>
                            <p><%= case_.description %></p>
                            <div class="case-footer">
                                <div class="case-meta">
                                    <span class="case-id">#<%= case_.caseNumber %></span>
                                    <span class="case-status <%= case_.status %>"><%= case_.status.replace('_', ' ') %></span>
                                    <span class="case-date"><%= new Date(case_.createdAt).toLocaleDateString() %></span>
                                </div>
                                <a href="/investigator/cases/<%= case_._id %>" class="view-case-btn">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-cases">
                    <i class="fas fa-folder-open"></i>
                    <p>No cases found. Create a new case to get started.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        const searchInput = document.getElementById('searchInput');
        const priorityFilter = document.getElementById('priorityFilter');
        const statusFilter = document.getElementById('statusFilter');
        const casesList = document.getElementById('casesList');
        const allCases = Array.from(document.querySelectorAll('.case-item'));

        function filterCases() {
            const searchTerm = searchInput.value.toLowerCase();
            const priorityValue = priorityFilter.value.toLowerCase();
            const statusValue = statusFilter.value.toLowerCase();

            allCases.forEach(caseItem => {
                const title = caseItem.querySelector('h3').textContent.toLowerCase();
                const description = caseItem.querySelector('p').textContent.toLowerCase();
                const priority = caseItem.querySelector('.case-priority').textContent.toLowerCase();
                const status = caseItem.querySelector('.case-status').textContent.toLowerCase();

                const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
                const matchesPriority = !priorityValue || priority === priorityValue;
                const matchesStatus = !statusValue || status.replace(' ', '_') === statusValue;

                if (matchesSearch && matchesPriority && matchesStatus) {
                    caseItem.style.display = 'flex';
                } else {
                    caseItem.style.display = 'none';
                }
            });

            // Update case numbers
            const visibleCases = Array.from(document.querySelectorAll('.case-item[style="display: flex;"]'));
            visibleCases.forEach((caseItem, index) => {
                caseItem.querySelector('.case-number-badge').textContent = index + 1;
            });

            // Show/hide no results message
            const noResults = document.querySelector('.no-cases');
            if (noResults) {
                noResults.style.display = visibleCases.length === 0 ? 'block' : 'none';
            }
        }

        searchInput.addEventListener('input', filterCases);
        priorityFilter.addEventListener('change', filterCases);
        statusFilter.addEventListener('change', filterCases);
    </script>
</body>
</html>
