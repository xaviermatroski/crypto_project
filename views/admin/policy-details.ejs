<%- include('../partials/header') %>

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/policies">Policies</a></li>
            <li class="breadcrumb-item active"><%= policy.name %></li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h3><%= policy.name %></h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Basic Information</h5>
                    <table class="table">
                        <tr>
                            <th>Policy ID:</th>
                            <td><%= policy.policyId %></td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td><%= policy.description %></td>
                        </tr>
                        <tr>
                            <th>Created By:</th>
                            <td><%= policy.createdBy.userName %></td>
                        </tr>
                        <tr>
                            <th>Created At:</th>
                            <td><%= new Date(policy.createdAt).toLocaleString() %></td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Categories</h5>
                    <ul class="list-group">
                        <% policy.categories.forEach(category => { %>
                            <li class="list-group-item"><%= category %></li>
                        <% }); %>
                    </ul>
                </div>
            </div>

            <div class="mt-4">
                <h5>Access Rules</h5>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Permissions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% policy.rules.forEach(rule => { %>
                            <tr>
                                <td><%= rule.role %></td>
                                <td><%= rule.permission %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
